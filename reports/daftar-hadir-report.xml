<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_daftar_hadir">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="text-center mb-5">
                                <h2>Laporan Daftar Hadir</h2>
                            </div>

                            <div class="row mb-5 mt-5">
                                <div class="col-6">
                                    <div class="row mb-2">
                                        <div class="col-4">
                                            <strong>Kursus</strong>
                                        </div>
                                        <div class="col-8">
                                            <span t-field="doc.kursus_id.name"/>
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-4">
                                            <strong>Sesi</strong>
                                        </div>
                                        <div class="col-8">
                                            <span t-field="doc.session_id.name"/>
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-4">
                                            <strong>Instruktur</strong>
                                        </div>
                                        <div class="col-8">
                                            <span t-field="doc.instruktur_id.name"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="row mb-2">
                                        <div class="col-4">
                                            <strong>Tanggal</strong>
                                        </div>
                                        <div class="col-8">
                                            <span t-field="doc.tanggal"/>
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-4">
                                            <strong>Total Hadir</strong>
                                        </div>
                                        <div class="col-8">
                                            <span t-field="doc.jml_peserta_hadir"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <table class="table table-borderless">
                                <thead>
                                    <tr>
                                        <th style="width: 5%;">No</th>

                                        <th style="width: 20%;">No. Peserta</th>

                                        <th>Nama Peserta</th>

                                        <th style="width: 20%;">Kehadiran</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="i" t-value="1"/>
                                    <tr t-foreach="doc.daftar_hadir_ids" t-as="line">
                                        <td>
                                            <span t-esc="i"/>
                                        </td>

                                        <td>
                                            <span t-field="line.peserta_id.no_peserta"/>
                                        </td>

                                        <td>
                                            <span t-field="line.peserta_id.name"/>
                                        </td>

                                        <td>
                                            <span t-field="line.is_hadir"/>
                                        </td>

                                        <t t-set="i" t-value="i+1"/>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="mt-5 mb-5">
                                <div style="width: 35%;" class="mb-5 float-end text-center">
                                    <span t-field="doc.env.company.city"/>
                                    ,
                                    <span t-field="doc.tanggal" t-options='{"format": "d MMMM y"}'/>

                                    <br/>

                                    <div style="margin-top: 100px; margin-bottom: 100px;">
                                        <span>(____________________)</span>
                                        <br/>
                                        <div class="text-center">
                                            <span t-field="doc.instruktur_id.name"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>