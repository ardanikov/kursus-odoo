<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_kursus_session_tree" model="ir.ui.view">
            <field name="name">cdn.kursus.session.list</field>

            <field name="model">cdn.kursus.session</field>

            <field name="arch" type="xml">
                <list string="Kursus Session" decoration-danger="seats == 0" decoration-info="state == 'done'">
                    <field name="name" />

                    <field name="kursus_id" />

                    <field name="start_date" />

                    <field name="duration" string="Durasi (jam)" />

                    <field name="seats" string="Peserta" />

                    <field name="state" string="Status" />
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_kursus_session_form" model="ir.ui.view">
            <field name="name">cdn.kursus.session.form</field>

            <field name="model">cdn.kursus.session</field>

            <field name="arch" type="xml">
                <form string="Kursus Session">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary" invisible="state != 'draft'" />

                        <button name="action_done" string="Done" type="object" class="btn-primary" invisible="state != 'confirm'" />

                        <button name="action_reset" string="Reset Status" type="object" class="btn-secondary" invisible="state != 'confirm'" />

                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done" />
                    </header>

                    <sheet>
                        <widget name="web_ribbon" bg_color="bg-info" text="Selesai" invisible="state != 'done'"/>

                        <group string="Informasi Sesi Kursus">
                            <group>
                                <field name="start_date" readonly="state != 'draft'" />

                                <field name="name" string="Pokok Bahasan" readonly="state != 'draft'" />

                                <field name="kursus_id" readonly="state != 'draft'" />
                            </group>
                            <group>
                                <field name="duration" string="Durasi (jam)" readonly="state != 'draft'" />
                                <field name="seats" string="Jumlah Peserta" readonly="state != 'draft'" />
                            </group>
                        </group>

                        <group string="Informasi Instruktur">
                            <group>
                                <field name="instruktur_id" readonly="state == 'done'" required="state == 'confirm'"/>
                                <field name="no_hp" />
                            </group>
                            <group>
                                <field name="email" />
                                <field name="jenis_kelamin" />
                            </group>
                        </group>

                        <notebook>
                            <page string="Peserta">
                                <field name="peserta_ids" readonly="state != 'draft'">
                                    <list>
                                        <field name="name" />

                                        <field name="jenis_kelamin" />

                                        <field name="mobile" string="No. HP" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                    <chatter />
                </form>
            </field>
        </record>

        <record id="cdn_kursus_session_view_calendar" model="ir.ui.view">
            <field name="name">cdn.kursus.session.view.calendar</field>

            <field name="model">cdn.kursus.session</field>

            <field name="arch" type="xml">
                <calendar string="Calendar Description" date_start="start_date" mode="month">
                    <!-- Add your fields here -->
                    <field name="name" />

                    <field name="instruktur_id" filters="1" />
                </calendar>
            </field>
        </record>

        <!-- Action -->
        <record id="action_kursus_session" model="ir.actions.act_window">
            <field name="name">Sesi Kursus</field>

            <field name="type">ir.actions.act_window</field>

            <field name="res_model">cdn.kursus.session</field>

            <field name="view_mode">list,form,calendar</field>

            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">                    
                    Buat Kursus Session Baru
                </p>
            </field>
        </record>

         <record id="set_status_draft" model="ir.actions.server">
            <field name="name">Set Status Draft</field>

            <field name="model_id" ref="model_cdn_kursus_session" />

            <field name="binding_model_id" ref="model_cdn_kursus_session" />

            <field name="binding_view_types">list</field>

            <field name="state">code</field>

            <field name="code">
                records.action_reset()
            </field>
        </record>
        <record id="set_status_confirm" model="ir.actions.server">
            <field name="name">Set Status Confirm</field>

            <field name="model_id" ref="model_cdn_kursus_session" />

            <field name="binding_model_id" ref="model_cdn_kursus_session" />

            <field name="binding_view_types">list</field>

            <field name="state">code</field>

            <field name="code">
                records.action_confirm()
            </field>
        </record>

        <record id="set_status_done" model="ir.actions.server">
            <field name="name">Set Status Done</field>

            <field name="model_id" ref="model_cdn_kursus_session" />

            <field name="binding_model_id" ref="model_cdn_kursus_session" />

            <field name="binding_view_types">list</field>

            <field name="state">code</field>

            <field name="code">
                records.action_done()
            </field>
        </record>

        <record id="set_status_reset_override" model="ir.actions.server">
            <field name="name">Testing</field>

            <field name="model_id" ref="model_cdn_kursus_session" />

            <field name="binding_model_id" ref="model_cdn_kursus_session" />

            <field name="binding_view_types">list</field>

            <field name="state">code</field>

            <field name="code">
                records.action_reset_override()
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_kursus_session" name="Sesi Kursus" parent="training_menu_categ" action="action_kursus_session" sequence="20" />
    </data>
</odoo>