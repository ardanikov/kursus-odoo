<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="cdn_kursus_list" model="ir.ui.view">
            <field name="name">cdn.kursus.form</field>

            <field name="model">cdn.kursus</field>

            <field name="arch" type="xml">
                <list>
                    <field name="name"/>

                    <field name="description"/>

                    <field name="user_id"/>
                </list>
            </field>
        </record>

        <record id="cdn_kursus_form" model="ir.ui.view">
            <field name="name">cdn.kursus.form</field>

            <field name="model">cdn.kursus</field>

            <field name="arch" type="xml">
                <form string="Kursus">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="user_id"/>
                        </group>
                        <notebook>
                            <page name="sesi" string="Sesi Kursus">
                                <group>
                                    <field name="session_line_ids" nolabel="1" colspan="2">
                                        <list string="Sesi">
                                            <field name="name"/>

                                            <field name="start_date"/>

                                            <field name="duration"/>

                                            <field name="seats"/>
                                        </list>
                                        <form string="Sesi">
                                            <group>
                                                <field name="name"/>

                                                <field name="start_date"/>

                                                <field name="duration"/>

                                                <field name="seats"/>
                                            </group>
                                        </form>
                                    </field>
                                </group>
                            </page>

                            <page name="deskripsi" string="Keterangan">
                                <group>
                                    <field name="description"/>
                                </group>
                            </page>

                            <page string="Peralatan / Konsumsi">
                                <field name="produk_ids">
                                    <list>
                                        <field name="name"/>

                                        <field name="product_template_variant_value_ids" widget="many2many_tags" string="Opsi"/>

                                        <!-- <field name="standard_price" /> -->
                                        <field name="lst_price"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="cdn_kursus_action" model="ir.actions.act_window">
            <field name="name">Kursus</field>

            <field name="type">ir.actions.act_window</field>

            <field name="res_model">cdn.kursus</field>

            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="kursus_menu_act" name="Kursus" parent="pengaturan_menu_categ" action="cdn_kursus_action" sequence="10"/>
    </data>
</odoo>