<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="cdn_instruktur_list" model="ir.ui.view">
            <field name="name">cdn.instruktur.form</field>

            <field name="model">cdn.instruktur</field>

            <field name="arch" type="xml">
                <list>
                    <field name="name" />

                    <field name="street" string="Alamat" />

                    <field name="street2" string="RT RW" />

                    <field name="mobile" string="No. HP" />

                    <field name="email" />

                    <field name="keahlian_ids" />
                </list>
            </field>
        </record>

        <record id="cdn_instruktur_form" model="ir.ui.view">
            <field name="name">cdn.instruktur.form</field>

            <field name="model">cdn.instruktur</field>

            <field name="arch" type="xml">
                <form string="Instruktur">
                    <sheet>
                        <group>
                            <group string="Data Diri">
                                <field name="name" />

                                <field name="mobile" string="No. HP" />

                                <field name="email" />

                                <field name="keahlian_ids" widget="many2many_tags" />

                                <field name="jenis_kelamin" />
                            </group>
                            <group string="Alamat">
                                <field name="provinsi_id" />

                                <field name="kota_id" domain="[('provinsi_id', '=', provinsi_id)]" />

                                <field name="kecamatan_id" domain="[('kota_id', '=', kota_id)]" />

                                <field name="desa_id" domain="[('kecamatan_id', '=', kecamatan_id)]" />

                                <field name="street" string="Alamat" />

                                <field name="street2" string="RT RW" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="cdn_instruktur_action" model="ir.actions.act_window">
            <field name="name">Instruktur</field>

            <field name="type">ir.actions.act_window</field>

            <field name="res_model">cdn.instruktur</field>

            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="instruktur_menu_act" name="Instruktur" parent="pengaturan_menu_categ" action="cdn_instruktur_action" sequence="20" />
    </data>
</odoo>