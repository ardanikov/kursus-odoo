<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="cdn_daftar_hadir_list" model="ir.ui.view">
            <field name="name">cdn.daftar_hadir.list</field>

            <field name="model">cdn.daftar_hadir</field>

            <field name="arch" type="xml">
                <list>
                    <field name="tanggal"/>
                    <field name="kursus_id"/>
                </list>
            </field>
        </record>

        <record id="cdn_daftar_hadir_form" model="ir.ui.view">
            <field name="name">cdn.daftar_hadir.form</field>

            <field name="model">cdn.daftar_hadir</field>

            <field name="arch" type="xml">
                <form string="Daftar Hadir">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="state == 'confirm'"/>

                        <button name="action_reset" string="Reset" type="object" invisible="not id or state != 'confirm'"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="tanggal"/>

                            <field name="kursus_id"/>

                            <field name="session_id"/>

                            <field name="jml_peserta_hadir"/>

                            <field name="harga_kursus_total"/>
                        </group>
                        <notebook>
                            <page string="Detail Kehadiran" name="detail_kehadiran">
                                <field name="daftar_hadir_ids" readonly="state == 'confirm'">
                                    <list editable="bottom" create="0">
                                        <field name="peserta_id" readonly="1" force_save="1"/>
                                        <field name="is_hadir"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="cdn_daftar_hadir_action" model="ir.actions.act_window">
            <field name="name">Daftar Hadir</field>

            <field name="res_model">cdn.daftar_hadir</field>

            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="daftar_hadir_menu_act" name="Daftar Hadir" parent="pendaftaran_menu_categ" action="cdn_daftar_hadir_action" sequence="20"/>
    </data>
</odoo>