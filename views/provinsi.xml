<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="cdn_provinsi_list" model="ir.ui.view">
            <field name="name">cdn.provinsi.form</field>

            <field name="model">cdn.provinsi</field>

            <field name="arch" type="xml">
                <list>
                    <field name="name" />

                    <field name="kode" />

                    <field name="singkatan" />

                    <field name="description" />
                </list>
            </field>
        </record>

        <record id="cdn_provinsi_form" model="ir.ui.view">
            <field name="name">cdn.provinsi.form</field>

            <field name="model">cdn.provinsi</field>

            <field name="arch" type="xml">
                <form string="Provinsi">
                    <sheet>
                        <group>
                            <field name="name" />

                            <field name="kode" />

                            <field name="singkatan" />

                            <field name="description" />
                        </group>
                        <notebook>
                            <page name="kota" string="Kota">
                                <field name="kota_ids" readonly="1">
                                    <list>
                                        <field name="kode" />
                                        <field name="name" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="cdn_provinsi_action" model="ir.actions.act_window">
            <field name="name">Provinsi</field>

            <field name="type">ir.actions.act_window</field>

            <field name="res_model">cdn.provinsi</field>

            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="provinsi_menu_act" name="Provinsi" parent="wilayah_menu_categ" action="cdn_provinsi_action" sequence="10" />
    </data>
</odoo>