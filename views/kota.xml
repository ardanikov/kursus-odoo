<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="cdn_kota_list" model="ir.ui.view">
            <field name="name">cdn.kota.form</field>

            <field name="model">cdn.kota</field>

            <field name="arch" type="xml">
                <list>
                    <field name="name" />

                    <field name="kode" />

                    <field name="singkatan" />

                    <field name="description" />

                    <field name="provinsi_id" />
                </list>
            </field>
        </record>

        <record id="cdn_kota_form" model="ir.ui.view">
            <field name="name">cdn.kota.form</field>

            <field name="model">cdn.kota</field>

            <field name="arch" type="xml">
                <form string="Kota">
                    <sheet>
                        <group>
                            <field name="name" />

                            <field name="kode" />

                            <field name="singkatan" />

                            <field name="description" />

                            <field name="provinsi_id" />
                        </group>
                        <notebook>
                            <page name="kecamatan" string="Kecamatan">
                                <field name="kecamatan_ids" readonly="1">
                                    <list>
                                        <field name="kode" />
                                        <field name="name" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="cdn_kota_action" model="ir.actions.act_window">
            <field name="name">Kota</field>

            <field name="type">ir.actions.act_window</field>

            <field name="res_model">cdn.kota</field>

            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="kota_menu_act" name="Kota" parent="wilayah_menu_categ" action="cdn_kota_action" sequence="20" />
    </data>
</odoo>